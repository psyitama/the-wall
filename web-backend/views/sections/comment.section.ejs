<div class="comment-section message_id_<%= message_id %>">
    <%- include("../partials/comments.partial.ejs", { comments }) %>

    <form class="add_comment_form" action="<%= API_URL %>wall/post_comment" method="POST">
        <input type="hidden" name="message_id" value="<%= message_id %>">
        <textarea name="comment" id="comment" cols="100" rows="10"></textarea>
        <input type="submit" value="Add a comment">
    </form>
</div>